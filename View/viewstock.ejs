<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Stock</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        .container {
            max-width: 1000px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 10px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #f5f5f5;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Stock Inventory</h1>
        <table>
            <thead>
                <tr>
                    <th>Medicine Name</th>
                    <th>Quantity</th>
                    <th>Batch Number</th>
                    <th>Expiry Date</th>
                    <th>MRP</th>
                    <th>GST</th>
                    <th>Discount</th>
                    <th>Rate</th>
                    <th>Amount</th>
                    <th>Total Amount</th>
                </tr>
            </thead>
            <tbody>
                <% if (typeof result!="undefined") { %>
                    <% result.forEach(item => { %>
                        <tr>
                            <td><%= item.medName %></td>
                            <td><%= item.qty %></td>
                            <td><%= item.batchNo %></td>
                            <td><%= item.exp %></td>
                            <td><%= item.MRP %></td>
                            <td><%= item.GST %></td>
                            <td><%= item.discount %></td>
                            <td><%= item.rate %></td>
                            <td><%= item.amount %></td>
                            <td><%= item.totalAmount %></td>
                        </tr>
                    <% }); %>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>
